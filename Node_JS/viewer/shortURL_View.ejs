<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>URL Shortener</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f5f5f5;
      padding-top: 50px;
    }
    .container {
      max-width: 600px;
    }
    .short-url-box {
      margin-top: 30px;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .copy-btn {
      cursor: pointer;
    }
  </style>
</head>
<body>

  <div class="container text-center">
    <h1 class="mb-4">ðŸ”— URL Shortener</h1>
    
    <form method="POST" action="/url" class="short-url-box">
      <div class="mb-3 text-start">
        <label for="url" class="form-label">Enter Your Original URL</label>
        <input type="text" class="form-control" id="url" name="url" placeholder="https://example.com" required>
      </div>
      <button type="submit" class="btn btn-primary w-100">Generate Short URL</button>
    </form>

    <% if (locals.id) { %>
      <div class="short-url-box mt-4">
        <h5>âœ… Short URL Generated</h5>
        <p><strong>ID:</strong> <code><%= id %></code></p>
        <div class="input-group">
          <input id="shortUrl" type="text" class="form-control" readonly value="http://localhost:8001/<%= id %>">
          <button class="btn btn-outline-secondary copy-btn" onclick="copyShortUrl()">Copy</button>
        </div>
      </div>
    <% } %>
  </div>

  <script>
    function copyShortUrl() {
      const urlInput = document.getElementById('shortUrl');
      urlInput.select();
      urlInput.setSelectionRange(0, 99999); // For mobile
      document.execCommand('copy');
      alert('Short URL copied to clipboard!');
    }
  </script>

</body>
</html>
